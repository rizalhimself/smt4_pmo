<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dua"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".activity_dua">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Identitas"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:paddingTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rincian Nilai"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvRincian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ukHuruf"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai Total"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvTot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ukHuruf"/>

    <TextView
        android:id="@+id/tvHuruf"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_gravity="right"
        android:text="N"
        android:textSize="100dp"/>






</LinearLayout>