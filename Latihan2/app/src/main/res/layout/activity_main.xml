<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:onClick="tampilkanPesan"
            android:text="Pesan"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btPesan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/purple_200"
            android:text="Pesan Dua"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nama Anda"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPesan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama anda disini" />

        <Button
            android:id="@+id/btTampilkanNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:text="Tampilkan Pesan"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bilangan Satu"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etBil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan bilangan satu disini" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bilangan Dua"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etBil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan bilangan dua disini" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hasil akan ditampilkan disini" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btTambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="Tambah"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btKurang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="Kurang"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btBagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="Bagi"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btKali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="Kali"
                android:textAllCaps="false"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="While"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btDoWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="do...While"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_200"
                android:padding="2dp"
                android:text="For"
                android:textAllCaps="false"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tvBilangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="20sp" />


    </LinearLayout>


</ScrollView>