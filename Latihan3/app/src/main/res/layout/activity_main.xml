<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini adalah TextView Dasar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sans | Ini adalah TextView Dasar"
            android:typeface="sans" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="monospace | Ini adalah TextView Dasar"
            android:typeface="monospace" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="serif | Ini adalah TextView Dasar"
            android:typeface="serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="normal | Ini adalah TextView Dasar"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Italic | Ini adalah TextView Dasar"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bold | Ini adalah TextView Dasar"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="normal | Ini adalah TextView Dasar"
            android:typeface="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextSize | Ini adalah TextView Dasar"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextSIze | Ini adalah TextView Dasar"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="1"
            android:text="Di sebuah desa, yang terpencil di tengah hutan belantara hiduplah seorang petani tua bersama anak gadisnya yang cantik jelita"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCobaHTML"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="previewHTML"/>

        <TextView
            android:id="@+id/tvCobaHTMLPanjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="PreviewHTMLPanjang"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor telfon saya adalah +6282133976008"
            android:autoLink="phone"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website pribadi saya adalah http://rizalhimself.blogspot.com/"
            android:autoLink="all"
            android:clickable="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="contoh EditText input nomor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="contoh EditText input teks"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textFilter|textNoSuggestions"
            android:hint="contoh EditText dengan mematikan saran"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contoh EditText dengan ImeOptions Send"
            android:id="@+id/etKirim"
            android:imeOptions="actionSend"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCari"
            android:inputType="number"
            android:hint="contoh EditText dengan ImeOptions Search"
            android:imeOptions="actionSearch"/>



    </LinearLayout>

</ScrollView>